@model List<Query3ResultViewModel>

<h1>Продукти, випущені після вказаної користувачем дати, разом з назвами компаній, які їх виробляють</h1>
<h4>SELECT pr.Name AS ProductName, c.Name AS CompanyName FROM Products pr INNER JOIN Companies c ON pr.CompanyId = c.Id WHERE pr.ReleaseDate > releaseDateThreshold";
</h4>
@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Company Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.ProductName</td>
                    <td>@result.CompanyName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found</p>
}
